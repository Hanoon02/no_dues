<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>
  <link rel="icon" href="../assets/images/icon.png" type="image/png" />
  <link rel="stylesheet" type="text/css"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" />
  <link rel="stylesheet" type="text/css" href="/assets/admin_home.css" />
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
</head>

<body>

  <%- include('partials/header.ejs') %>

  <p id="adminName" style="display: none">
    <%= adminName %>
  </p>
  <p id="CURRENT_URL" style="display: none">
    <%= url %>
  </p>

  <div id="navbar">
    <div id="navbar_left">
      <div id="navbar_left_i"><img src="/assets/nd.png" /></div>

      <div class="dropdown">
        <div id="navbar_left_p">No Dues</div>
        <span class="icon-down"></span>
        <div class="dropdown-content">
          <a href="/user/signout">Logout</a> <br />
          <hr />
          <a id="sheet">Show Sheet</a>
        </div>
      </div>
    </div>
    <div id="navbar_right">
      <div id="navbar_right_p">Hello <%= originalName%>
      </div>
      <div id="navbar_right_i">
        <img src="<%=locals.user.image%>">
      </div>
    </div>
  </div>

  <!--Main-->
  <div id="main">
    <div class="container">
      <h2 style="margin-bottom: 40px">List of students</h2>

      <div class="d-flex align-items-center justify-content-center" style="margin-bottom: 10px" data-aos="fade-up"
        data-aos-delay="100">
        <select class="filter" name="status" id="status">
          <option value="pending">Pending</option>
          <option value="rejected">Rejected</option>
          <option value="accepted">Accepted</option>
        </select>
      </div>

      <div class="row d-flex align-items-center justify-content-center" data-aos="fade-up" data-aos-delay="100">
        <select class="filter" name="degree" id="degree">
          <option value="All">Degree (All)</option>
          <option value="B. Tech">B.Tech</option>
          <option value="M. Tech">M.Tech</option>
          <option value="Phd">Phd</option>
        </select>

        <select class="filter" name="department" id="department">
          <option value="All">Branch(All)</option>
          <option value="CSE">CSE</option>
          <option value="Mathematics">MATHS</option>
          <option value="CB">CB</option>
          <option value="SSH">SSH</option>
          <option value="ECE">ECE</option>
          <option value="HCD">HCD</option>
        </select>

        <input class="filter" type="number" id="batch" name="batch" placeholder="BATCH" />

        <% if (adminName=="hostel" ) { %>
          <select class="filter" name="hostelTaken" id="hostelTaken">
            <option value="all">Taken/Not Taken</option>
            <option value="true">Taken Hostel</option>
            <option value="false">Not Taken</option>
          </select>
          <% } %>

            <button class="filter" id="search">
              <i class="fa fa-search" aria-hidden="true"></i>
            </button>
      </div>

      <div class="brow row d-flex align-items-center justify-content-center" data-aos="fade-up" data-aos-delay="100">
        <button class="filter nex" id="selectAll">Select All</button>

        <button class="filter nex" id="unselectAll">Unselect All</button>

        <button class="filter nex" id="sendAll">Accept Selected</button>
      </div>

      <div class="accordion"></div>
    </div>
  </div>

  <%- include('partials/footer.ejs') %>


  <script src="../assets/admin_home.js"></script>
  <script src="../assets/layout.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script>
      <% if (flash.success && flash.success.length > 0) { %>
          new Noty({
            theme: 'metroui',
            text: "<%= flash.success %>",
            type: 'success',
            layout: 'topRight',
            timeout: 1500
          }).show();
        <% } %>
  </script>

</body>

</html>